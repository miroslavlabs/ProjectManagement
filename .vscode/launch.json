    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server Application",
            "args": ["${relativeFile}"],
            "runtimeArgs": ["--nolazy", "-r", "${workspaceFolder}/server-app/node_modules/ts-node/register"],
            "sourceMaps": true,
            "program": "${workspaceFolder}/server-app/src/server-app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}